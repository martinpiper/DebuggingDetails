JMPQuickStartAddress = 2061
StartOnFilenameNumber = 1



TapeScrollingMessageSet = 1
!macro MTapeScrollingMessageSet {
	!scr "now loading *cyberdyne warrior extended* edition with loading screens and intro.        "
}

TapeFilenameSet = 1
!macro MTapeFilenameSet {
TapeHeaderFilenameStart = $0343	; The tape header address for the filename text plus 2 chars
TapeHeaderFilenameLen = 11	; Up to 13 chars is fine because of the two extra chars
!by CHR_Clear , CHR_White
!pet "cyberdyne"
}

ScreenTextSet = 1
!macro MScreenTextSet {
	!scr "martyload now loading: cyberdyne warrior"
}
